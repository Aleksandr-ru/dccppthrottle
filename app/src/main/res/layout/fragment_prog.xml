<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.prog.ProgFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textCvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_cv_number" />

        <ru.aleksandr.dccppthrottle.view.PlusMinusView
            style="@style/Widget.Theme.DCCppThrottle.PlusMinusView"
            android:id="@+id/plusminusCvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_margin"
            app:max="1024"
            app:min="1"
            app:nullable="false"
            app:value="1" />

        <Button
            android:id="@+id/buttonRead"
            style="@style/Widget.Theme.DCCppThrottle.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/label_read_value" />

        <TextView
            android:id="@+id/textCvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/label_cv_value" />

        <ru.aleksandr.dccppthrottle.view.PlusMinusView
            style="@style/Widget.Theme.DCCppThrottle.PlusMinusView"
            android:id="@+id/plusminusCvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_margin"
            app:max="255"
            app:min="0"
            app:nullable="false"
            app:value="0" />

        <TextView
            android:id="@+id/textCvBits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/label_cv_value_bits" />

        <LinearLayout
            android:id="@+id/layoutBits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <!-- Bit buttons -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

           <ToggleButton
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textOff="7"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="1"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="1"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="1"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="1"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="1"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="1"/>
            <ToggleButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="7"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
            <ToggleButton
                style="@style/Widget.Theme.DCCppThrottle.Toggle.Bit"
                android:textOff="0"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
        <include layout="@layout/bit_toggle"/>
    </LinearLayout>

        <Button
            android:id="@+id/buttonWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/label_write_value" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>